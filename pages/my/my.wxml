<!--pages/my/my.wxml-->
<view class="page">
  <view class="header">
    <image src="{{ userDetail.bg}}" class="background" mode="aspectFill" />
    <view class="header-box">
      <view wx:if="{{!userInfo.avatarUrl}}">
        <button open-type="getUserInfo" bind:getuserinfo="register">立即登陆</button>
      </view>
      <view wx:else class="header-info">
        <van-image src="{{userInfo.avatarUrl}}" round width="120rpx" height="120rpx" />
      </view>
      <view class="header-list">
        <view class="header-list-item">
          <text>余额</text>
          <text class="header-list-item-text">0.00</text>
        </view>
        <view class="header-list-item">
          <text>积分</text>
          <text class="header-list-item-text">0</text>
        </view>
        <view class="header-list-item">
          <text>优惠券</text>
          <text class="header-list-item-text">0</text>
        </view>
      </view>
    </view>
  </view>
</view>