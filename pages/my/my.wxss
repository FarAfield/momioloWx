/* pages/my/my.wxss */
.header {
  height: 300rpx;
  position: relative;
}
.background{
  height: 100%;
}
.header-box{
  position: absolute;
  top:0;
  height: 100%;
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.header-info{
  display: flex;
  justify-content: start;
}
.nickname {
  display: flex;
  align-items: center;
  margin-left: 12rpx;
}
.header-list{
  display: flex;
  justify-content: center;
}
.header-list-item {
  display: flex;
  flex-direction: column;
  margin: 0 24rpx;
  font-size: 32rpx;
}
.header-list-item-text {
  text-align: center;
}